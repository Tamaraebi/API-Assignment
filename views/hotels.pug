extends layout 

block main-content
        div(id="hotel-results") 
            div(class="row")
               each h in hotels
                    div(class="icon-text")
                        p
                            span(class="font-weight-bold") Name: 
                            span #{h.name}
                    div(class="icon-text")
                        p 
                            span(class="font-weight-bold") Image: 
                            - let photo = "";
                            - if (h.photo) photo = h.photo.images.small.url;
                            span #{photo}
                    div(class="icon-text")
                        p 
                            span(class="font-weight-bold") Price: 
                            span #{h.location_string} 
                    div(class="icon-text")
        div.anchor-container    
            a(href="/flights") Back